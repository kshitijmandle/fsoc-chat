<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kalilinux"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:background="#57FFF9F9"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fsociety"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#D40303"
            android:gravity="center"
            />




        <EditText
            android:id="@+id/edtusernameid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="Username"
            android:padding="9dp"
            android:textColorHint="@color/black"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/edtpasswordid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="9dp"
            android:hint="Password must be 6 letter need"
            android:textColorHint="@color/black"
            android:textColor="@color/white"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtemailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:padding="9dp"
            android:hint="Email"
            android:textColor="@color/white"
            android:textColorHint="@color/black"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/signUppage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="4dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:text="Already have an account? Login" />



        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up "
            android:id="@+id/signupbtn"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_marginTop="18dp"
            android:backgroundTint="#3897f0"
            app:cornerRadius="4dp"/>


    </LinearLayout>



</LinearLayout>